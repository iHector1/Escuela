@model Escuela.Model.Profesor

@{
    ViewData["Title"] = "Editar Profesor";
    Layout="~/Views/Shared/elLayout.cshtml";
}

<h1>Editar</h1>

<h4>Profesor</h4>
<div class="row">
    @Html.AntiForgeryToken()
    <div class="col-md-4">
        <form method="post">
        <dt class="col-sm-2">
            Nomina
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NominaProfesor)
        </dd>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreProfesor" class="control-label">Nombre</label>
                <input asp-for="NombreProfesor" class="form-control" required />
                <span asp-validation-for="NombreProfesor" class="text-danger"></span>
            </div>
            <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="ApellidoPaternoProfesor" class="control-label">Apellido Paterno</label>
                <input asp-for="ApellidoPaternoProfesor" class="form-control" required />
                <span asp-validation-for="ApellidoPaternoProfesor" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ApelidoMaternoProfesor" class="control-label">Apellido Materno</label>
                <input asp-for="ApelidoMaternoProfesor" class="form-control" required />
                <span asp-validation-for="ApelidoMaternoProfesor" class="text-danger" ></span>
            </div>
            </div>
            <div class="form-group ">
                <label asp-for="FechaNacimientoProfesor" class="control-label">Fecha Nacimiento</label>
                <input asp-for="FechaNacimientoProfesor" class="form-control" required  />
                <span asp-validation-for="FechaNacimientoProfesor" class="text-danger"  ></span>
            </div>
            <div class="form-group ">
                <label asp-for="CorreoProfesor" class="control-label">Correo</label>
                <input asp-for="CorreoProfesor" class="form-control" />
                <span asp-validation-for="CorreoProfesor" class="text-danger" required ></span>
            </div>
            
            <div class="form-group ">
                <label asp-for="Contrase単aProfesor" class="control-label">Contrase単a</label>
                <input asp-for="Contrase単aProfesor" class="form-control" required />
                <span asp-validation-for="Contrase単aProfesor" class="text-danger"></span>
            </div>
            <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="IdContrato" class="control-label">Contrato</label>
                <select asp-for="IdContrato" class ="form-control" asp-items="ViewBag.IdContrato"required>
                        <option ></option> 
                        <option value="1" >Base</option>
                        <option value="2">Asignatura</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="IdPlantel" class="control-label">Plantel</label>
                <select asp-for="IdPlantel" class ="form-control" asp-items="ViewBag.IdPlantel" required>
                     <option ></option> 
                      <option value="1">Colomos</option> 
                        <option value="2" >Tonala</option>
                        <option value="3">Rio Santiago</option>
                </select>
            </div>
            </div>
            <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="HorasAsignadasProfesor" class="control-label">Horas</label>
                <input asp-for="HorasAsignadasProfesor" class="form-control" required  />
                <span asp-validation-for="HorasAsignadasProfesor" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="CurpProfesor" class="control-label">CURP</label>
                <input asp-for="CurpProfesor" class="form-control"  required />
                <span asp-validation-for="CurpProfesor" class="text-danger"></span>
            </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save"class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Profesor" asp-action="lista_profesores">Regresar a la lista </a>
</div>