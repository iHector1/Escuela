@model Escuela.Model.Profesor
@{
    ViewData["Title"] = "Editar";
    Layout="~/Views/Shared/elLayout.cshtml";
}

<h1>Edit</h1>

<h4>Profesor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar_profesor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NominaProfesor" />
            <div class="form-group">
                <label asp-for="NombreProfesor" class="control-label"></label>
                <input asp-for="NombreProfesor" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ApellidoPaternoProfesor" class="control-label"></label>
                <input asp-for="ApellidoPaternoProfesor" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ApelidoMaternoProfesor" class="control-label"></label>
                <input asp-for="ApelidoMaternoProfesor" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FechaNacimientoProfesor" class="control-label"></label>
                <input asp-for="FechaNacimientoProfesor" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CorreoProfesor" class="control-label"></label>
                <input asp-for="CorreoProfesor" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ContraseñaProfesor" class="control-label"></label>
                <input asp-for="ContraseñaProfesor" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="IdContrato" class="control-label"></label>
                <select asp-for="IdContrato" class="form-control" asp-items="ViewBag.IdContrato">
                        <option ></option> 
                        <option value="1" >Base</option>
                        <option value="2">Asignatura</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="IdPlantel" class="control-label"></label>
                <select asp-for="IdPlantel" class="form-control" asp-items="ViewBag.IdPlantel">
                     <option ></option> 
                      <option value="1">Colomos</option> 
                        <option value="2" >Tonala</option>
                        <option value="3">Rio Santiago</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="HorasAsignadasProfesor" class="control-label"></label>
                <input asp-for="HorasAsignadasProfesor" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CurpProfesor" class="control-label"></label>
                <input asp-for="CurpProfesor" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="lista_profesores">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
